{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "rootDir": "./",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": { "@/*": ["src/*"] },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": false,
        "skipLibCheck": true
    },
    "exclude": ["node_modules"]
}
 